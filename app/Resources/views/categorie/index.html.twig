{% block content %}
    <br>
    <br>
    <br>

    <center><h2 class="contact-title">
            <br><br>Liste des Categorie </h2></center>
    <div class="album py-5 bg-light">
        <div class="container">

            <ul class="nav" id="side-menu">
                <li>
                    <a href="#"> <span class="fa arrow"></span></a>

                    <ul class="nav nav-second-level" id="entitiesNav">
