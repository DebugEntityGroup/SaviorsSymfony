                                                    <div class="feature-content">
                                                        <h4>
                                                            <a href="{{ path('categorie_show', { 'nom': categorie.nom }) }}">{{ categorie.nom }}</a>
                                                        </h4>
                                                        <p class="listing-tagline">{{ categorie.description|trim }}</p>
                                                    </div>
                                                </div>
                                                <div class="listing-bottom clearfix">
                                                    <div class="btn-group">

                                                        <a href="{{ path('categorie_edit', { 'nom': categorie.nom }) }}">
